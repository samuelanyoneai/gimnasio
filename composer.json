{
    "name": "gimnasio/cliente-servidor-mvc",
    "description": "Sistema de GestiÃ³n de Gimnasio - Arquitectura Cliente-Servidor con MVC",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Estudiante",
            "email": "estudiante@example.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-pdo": "*",
        "ext-pdo_pgsql": "*"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "lint": "phpcs --standard=PSR12 --extensions=php config/ models/ controllers/",
        "analyse": "phpstan analyse --level=5 config/ models/ controllers/",
        "security": "composer audit"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}

